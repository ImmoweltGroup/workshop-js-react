{
  "name": "@immowelt/workshop-js-react",
  "version": "0.0.0-development",
  "private": false,
  "author": "Immonet dev team <aegaeon@immonet.de> (https://immonet.de)",
  "license": "MIT",
  "description": "A living workshop around React, JSX and the underlying principles with playground samples for the attendees.",
  "scripts": {
    "start": "run-p serve build:watch",
    "test": "npm run build && npm run lint",
    "serve": "serve . --open --clipless",
    "build": "cross-env NODE_ENV=development webpack",
    "build:watch": "npm run build -- --watch",
    "prettier": "prettier --write 'src/**/*.{js,json}'",
    "precommit": "lint-staged",
    "lint": "eslint src",
    "flow": "flow",
    "flow-typed": "flow-typed",
    "flow-typed-install": "flow-typed install --ignoreDeps=bundled peer --overwrite",
    "prepare": "npm run flow-typed-install || true"
  },
  "lint-staged": {
    "src/**/*.{js,json,css}": [
      "prettier --write",
      "git add"
    ]
  },
  "engines": {
    "node": ">=8.4.0",
    "npm": ">=5.3.0"
  },
  "devDependencies": {
    "@immowelt/babel-preset-immowelt-react": "^1.1.3",
    "@immowelt/eslint-config-immowelt-react": "^2.0.1",
    "@immowelt/styleguide-javascript": "^1.0.6",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "cross-env": "^5.0.5",
    "eslint": "^4.4.1",
    "flow-bin": "^0.56.0",
    "flow-typed": "^2.1.2",
    "glob": "^7.1.2",
    "husky": "^0.14.3",
    "lint-staged": "^4.1.2",
    "npm-run-all": "^4.1.1",
    "prettier": "^1.6.1",
    "webpack": "^3.6.0"
  },
  "dependencies": {
    "code-mirror-themes": "^1.0.0",
    "codemirror": "^5.29.0",
    "prop-types": "^15.5.10",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "serve": "^6.0.6"
  }
}
