{
  "name": "@immowelt/workshop-js-react",
  "version": "0.0.0-development",
  "private": false,
  "author": "Immonet dev team <aegaeon@immonet.de> (https://immonet.de)",
  "license": "MIT",
  "description": "A living workshop around React, JSX and the underlying principles with playground samples for the attendees.",
  "scripts": {
    "start": "run-p serve build",
    "serve": "serve . --open --clipless",
    "build": "cross-env NODE_ENV=development babel --watch src --out-dir dist",
    "prettier": "prettier --write 'src/**/*.{js,json}'",
    "precommit": "lint-staged",
    "flow": "flow",
    "flow-typed": "flow-typed",
    "flow-typed-install": "flow-typed install --ignoreDeps=bundled peer --overwrite",
    "prepare": "npm run flow-typed-install || true"
  },
  "lint-staged": {
    "src/**/*.{js,json,css}": [
      "prettier --write",
      "git add"
    ]
  },
  "engines": {
    "node": ">=8.4.0",
    "npm": ">=5.3.0"
  },
  "devDependencies": {
    "@immowelt/babel-preset-immowelt-react": "^1.0.1",
    "@immowelt/eslint-config-immowelt-react": "^2.0.0",
    "@immowelt/styleguide-javascript": "^1.0.6",
    "babel-cli": "^6.26.0",
    "cross-env": "^5.0.5",
    "eslint": "^4.4.1",
    "flow-bin": "^0.53.0",
    "flow-typed": "^2.1.2",
    "husky": "^0.14.3",
    "lint-staged": "^4.1.2",
    "npm-run-all": "^4.1.1",
    "prettier": "^1.6.1"
  },
  "dependencies": {
    "codemirror": "^5.29.0",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "serve": "^6.0.6"
  }
}
